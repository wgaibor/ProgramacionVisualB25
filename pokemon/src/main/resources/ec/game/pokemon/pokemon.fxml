<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.game.pokemon.PokemonController"
      stylesheets="@pokemon.css">

   <top>
      <VBox styleClass="header">
         <HBox alignment="CENTER" spacing="20.0">
            <Label text="⚡" styleClass="pokeball-icon" />
            <Label text="Pokédek" styleClass="title"/>
         </HBox>

         <HBox alignment="CENTER" spacing="20.0">
            <TextField fx:id="searchField" styleClass="search-field" promptText="Buscar Pokémon por nombre..." HBox.hgrow="ALWAYS"/>
            <Button text="Buscar" styleClass="search-button" onAction="#searchPokemon"/>
            <Button text="Aleatorio" styleClass="random-button"/>
         </HBox>
      </VBox>
   </top>

   <center>
      <ScrollPane fitToWidth="true" styleClass="scroll-pane">
         <VBox fx:id="pokemonContainer" styleClass="pokemon-container" />
      </ScrollPane>
   </center>

   <bottom>
      <VBox alignment="CENTER" styleClass="header">
         <Button text="Cargar mas pokemon" styleClass="load-more-button" />
      </VBox>
   </bottom>
     
</BorderPane>
